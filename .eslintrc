{
  "extends": ["eslint:recommended", "google"],
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "parserOptions": {
    "sourceType": "module"
  },
  "rules": {
    "eol-last": 0,
    "comma-dangle": ["error", "never"],
    "no-debugger": 1,
    "one-var": ["error", "consecutive"],
    "indent": [
      2, 2, {
        "VariableDeclarator": "first"
      }
    ],
    "require-jsdoc": [
      2, {
        "require": {
          "FunctionDeclaration": false,
          "MethodDefinition": true,
          "ClassDeclaration": false
        }
      }
    ]
  }
}
